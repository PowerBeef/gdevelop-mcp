{
  "name": "gdevelop-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for controlling GDevelop game editor projects",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "gdevelop-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "gdevelop",
    "game-development",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "gdcore-tools": "2.0.0-gd-v5.6.251-autobuild",
    "gdexporter": "^2.0.0",
    "zod": "^3.23.8",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "build/",
    "README.md"
  ]
}
